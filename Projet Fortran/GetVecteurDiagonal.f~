      SUBROUTINE GETVECTEURDIAGONAL(N,M,VECTEUR_MIN,SIZEMAX,
     A VECTEUR_DIAGONAL)
      IMPLICIT NONE
      INTEGER  I,J,TOTAL,N,M,SIZEMAX
      INTEGER  VECTEUR_DIAGONAL((N+1)*(M+1)),
     Z VECTEUR_MIN((N+1)*(M+1))
      VECTEUR_DIAGONAL(1) = 1
      TOTAL = 1
      DO 1 I=2,(N+1)*(M+1)
         VECTEUR_DIAGONAL(I) = I+TOTAL-VECTEUR_MIN(I)+1
         TOTAL = VECTEUR_DIAGONAL(I)
         SIZEMAX = VECTEUR_DIAGONAL(I)
1     CONTINUE

      END
